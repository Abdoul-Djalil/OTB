#ifndef __ConfigureMonteverdi2_h
#define __ConfigureMonteverdi2_h

//
// Windows DLL import/export macros.
#if defined( _WIN32 ) || defined( _WIN64 )
// Dynamic DLL vs. static LIB.
// TODO: Activate when dealing with dynamic-link libraries under Windows.
#  define DYNAMIC_BUILD 0
#  if DYNAMIC_BUILD // TODO: Use CMake macro to test dynamic/static building.
#    if DLL_EXPORT // TODO: Use correct macro to test export/import.
//     Export symbols when building .lib interface of DLL.
#      define Monteverdi2_EXPORT __declspec( dllexport )
#    else
//     Import symbols when linking with .lib interface of DLL.
#      define Monteverdi2_EXPORT __declspec( dllimport )
#    endif
#  else
//     Empty definition when build statically.
#      define Monteverdi2_EXPORT
#  endif
#else
// Empty definition on non Windows plateforms.
#  define Monteverdi2_EXPORT
#endif

//
// Monteverdi2 project
#define PROJECT_NAME "@PROJECT_NAME@"

//
// Monteverdi2 version.
#define Monteverdi2_VERSION_MAJOR @Monteverdi2_VERSION_MAJOR@
#define Monteverdi2_VERSION_MINOR @Monteverdi2_VERSION_MINOR@
#define Monteverdi2_VERSION_PATCH @Monteverdi2_VERSION_PATCH@
#define Monteverdi2_VERSION_STRING "@Monteverdi2_VERSION_STRING@"

//
// Monteverdi2 data version.
#define Monteverdi2_DATA_VERSION_MAJOR "0"
#define Monteverdi2_DATA_VERSION_MINOR "5"
#define Monteverdi2_DATA_VERSION_PATCH "1"
#define Monteverdi2_DATA_VERSION_STRING ( \
  Monteverdi2_DATA_VERSION_MAJOR "."	  \
  Monteverdi2_DATA_VERSION_MINOR "."	  \
  Monteverdi2_DATA_VERSION_PATCH        )

//
//
#define OTB_VERSION_CHECK( M, m, p )					\
  (OTB_VERSION_MAJOR>(M) ||						\
   (OTB_VERSION_MAJOR==(M) && (OTB_VERSION_MINOR>(m) ||			\
			       OTB_VERSION_MINOR==(m) && OTB_VERSION_PATH>=(p))))

